    <facet-definition name="Province">
        <group-by>
            <sub-path>descendant::tei:region[@type='province-name']/tei:placeName[@xml:lang='en']</sub-path>
        </group-by>
        <max-values show="5">40</max-values>
        <order-by direction="ascending">count</order-by>
    </facet-definition>
    <facet-definition name="省" xml:lang="zh-Hans">
        <group-by>
            <sub-path>descendant::tei:region[@type='province-name']/tei:placeName[@xml:lang='zn-Hans']</sub-path>
        </group-by>
        <max-values show="5">40</max-values>
        <order-by direction="ascending">count</order-by>
    </facet-definition>
    <facet-definition name="Dynasty">
        <group-by>
            <sub-path>descendant::tei:state[@type='existence']/tei:label[@xml:lang='en']</sub-path>
        </group-by>
        <max-values show="5">40</max-values>
        <order-by direction="ascending">count</order-by>
    </facet-definition>
    <facet-definition name="王朝" xml:lang="zh-Hans">
        <group-by>
            <sub-path>descendant::tei:state[@type='existence']/tei:label[@xml:lang='zn-Hans']</sub-path>
        </group-by>
        <max-values show="5">40</max-values>
        <order-by direction="ascending">count</order-by>
    </facet-definition>
    <facet-definition name="Architectural Feature">
        <group-by function="facet:group-by-array">
            <sub-path>descendant::tei:relation[@ref="dc:subject"]/@passive</sub-path>
        </group-by>
        <max-values show="5">40</max-values>
        <order-by direction="ascending">count</order-by>
    </facet-definition>
</facets>