    <text>
        <body>
            <listPlace>
                <place xml:id="place-XXX" type="TYPE">
                    <!--Must include 1 english name place type -->
                    <placeName xml:id="nameXXX-X" xml:lang="" source="bibrefs" syriaca-tags="#syriaca-headword"/>           
                    <!-- bibl also save to bible data folder? -->
                    <desc xml:lang="">
                        <quote source="#bibXXX-X">Description</quote>
                    </desc>
                    <!-- Optional location text and gps -->
                    <location type="gps" source="#bibXXX-X">
                        <geo>LAT LONG</geo>
                    </location>
                    <!-- much trickier -->
                    <location type="relative" subtype="quote" source="#bib78-5">
                        <measure unit="days-journey" quantity="5"/>
                        <offset/>
                        <placeName ref="http://syriaca.org/place/18"/>
                    </location>
                    <!-- events bind computed dates at creation able to insert place names -->
                    <event when="XXXX" source="#bibXXX-X">
                        <p xml:lang="en"/>
                    </event>
                    <!-- attestations -->
                    <event type="attestation" xml:id="attestation78-1" notBefore="1146" notAfter="1234" source="#bib78-9" syriaca-computed-end="1234-01-01" syriaca-computed-start="1146-01-01">
                        <p xml:lang="en">Attestation of name ܐܘܪܗܝ in the anonymous <title ref="http://syriaca.org/work/113">Chronicle of 1234</title>.</p>
                        <link target="#name78-3 #attestation78-1"/>
                    </event>
                    <!-- confession dropdown?-->
                    <state type="confession" xml:id="confession78-2" ref="http://syriaca.org/confessions.xml#christians" from="0030" to="1924" source="#bib78-1" syriaca-computed-end="1924-01-01" syriaca-computed-start="0030-01-01">
                        <label>Christians</label>
                    </state>
                    <!-- notes type dropdown insert place name where needed?-->
                    <note type="incerta"/>
                    <bibl xml:id="bibXX-X">
                        <!-- repeatable -->
                        <author>Author</author>
                        <!-- title repeatable a(article?) m(manuscript) -->
                        <title level="a" xml:lang="en">article title</title>
                        <!-- point to bib record -->
<!--                        <ptr target="http://syriaca.org/bibl/1"/>-->
                        <!--unit: pages maps-->
                        <citedRange unit="pp"/>
                    </bibl>
                </place>
                <!-- relations?
                <relation name="contained" active="http://syriaca.org/place/145 http://syriaca.org/place/166" passive="#place-78" source="#bib78-1" to="0363"/>
                -->
            </listPlace>
